/* Id binding system
   Some animations classes require other objs to work, mainly for bindings them
   for example some planets may orbit around other planets that are already orbiting others etc
   This way to reference them, just place an id inside the obj, and reference it using @<id>
   in a binding property
*/

[{
    "name": "Solar System",
    "objs": [{
        "filename": "D:\\Workspace\\jGraphicScene\\out\\artifacts\\bola\\bola.obj",
        "rotation": [1, 1, 0, 0],
        "scale": 1,
        "translation": [0, 0, 0],
        "transformation": {
            "type": "WalkAround", // Class name to be used
            "properties": { // Classes have parameters, when defined here they will be used for animations

            }
        },
        "materials": { // materials should come from an .mtl, but if defined here, they will overwrite the ones in .mtl
            "@default": { // if obj does not have groups or materials, this will be assigned to the entire obj
                "ambientMap": "aaa.png",
                "diffuseMap": "bunny.png",
                "specularMap": "bunny_spec.png"
            },
            "<otherMaterialName>": {
                /*
                ambientColor
                diffuseColor
                specularColor
            
                ambientMap
                diffuseMap
                specularMap
            
                opacity
                shininess
                specularExponent
            
                illuminationModel
                */
            }
        }
    }, {
        "filename": "D:\\Workspace\\jGraphicScene\\out\\artifacts\\bola\\bola.obj",
        "rotation": [0, 0, 0, 0],
        "scale": 1,
        "translation": [1, 1, 1]
    }],
    "lighting": [1, 3, 3] // Lighting positions
    //"background": "img.png"
}]